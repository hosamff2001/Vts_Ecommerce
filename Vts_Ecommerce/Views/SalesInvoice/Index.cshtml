@model List<SalesInvoice>

@{
    ViewData["Title"] = "Sales Invoices";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Sales Invoices</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">Create Invoice</a>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Invoice #</th>
                        <th>Date</th>
                        <th>Customer</th>
                        <th>Subtotal</th>
                        <th>Discount</th>
                        <th>Tax</th>
                        <th>Total</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var invoice in Model)
                    {
                        <tr>
                            <td>@invoice.InvoiceNumber</td>
                            <td>@invoice.InvoiceDate.ToString("yyyy-MM-dd")</td>
                            <td>@invoice.CustomerId</td>
                            <td>@(invoice.TotalAmount - (invoice.DiscountAmount ) - (invoice.TaxAmount)).ToString("C")</td>
                            <td>@(invoice.DiscountAmount ).ToString("C")</td>
                            <td>@(invoice.TaxAmount ).ToString("C")</td>
                            <td>@invoice.TotalAmount.ToString("C")</td>
                           
                            <td>
                                <a asp-action="Details" asp-route-id="@invoice.Id" class="btn btn-sm btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@invoice.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@invoice.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No invoices found. <a asp-action="Create">Create one</a>.</div>
    }
</div>
