@model List<Product>

@{
    ViewData["Title"] = "Products";
}

<div class="container mt-4">
    <div class="row mb-3">
        <div class="col-md-8">
            <h2>Products</h2>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">Create New</a>
        </div>
    </div>

    @if (Model.Count > 0)
    {
        <div class="table-responsive">
            <table class="table table-hover">
                <thead class="table-light">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Cost Price</th>
                        <th>Selling Price</th>
                        <th>Stock</th>
                        <th>Status</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var product in Model)
                    {
                        <tr>
                            <td>@product.Name</td>
                            <td>@product.CategoryId</td>
                            <td>@product.CostPrice.ToString("C")</td>
                            <td>@product.SellingPrice.ToString("C")</td>
                            <td>@product.StockQuantity</td>
                            <td>
                                @if (product.IsActive)
                                {
                                    <span class="badge bg-success">Active</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Inactive</span>
                                }
                            </td>
                            <td>
                                <a asp-action="Details" asp-route-id="@product.Id" class="btn btn-sm btn-info">View</a>
                                <a asp-action="Edit" asp-route-id="@product.Id" class="btn btn-sm btn-warning">Edit</a>
                                <a asp-action="Delete" asp-route-id="@product.Id" class="btn btn-sm btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">No products found. <a asp-action="Create">Create one</a>.</div>
    }
</div>
